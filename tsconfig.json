{
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "target": "esnext",
    "module": "NodeNext",
    "lib": [ "esnext" ],
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": false,
    "isolatedModules": true,
    "baseUrl": ".",
    "rootDir": "src",
    "types": ["node"],
    "paths": {
      "~/": ["./src"],
      "~/*": ["./src/*"],
    },
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
  },
  "include": ["src"]
}